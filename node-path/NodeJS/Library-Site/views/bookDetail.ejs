<%- include('./partials/header.ejs', {title}) %>
<div class="title mt-5">
    <h2><%= book.title %></h2>
</div>
<p class="mt-3 w-75"><span class="font-weight-bold">Author: </span><a href="<%= book.author.url %>"><%= book.author.name %></a></p>
<p class="mt-3 w-75"><span class="font-weight-bold">Summary: </span><%= book.summary %></p>
<p class="mt-3 w-75"><span class="font-weight-bold">ISBN: </span><%= book.isbn %></p>
<p class="mt-3 w-75"><span class="font-weight-bold">Genre: </span><a href="<%= book.genre[0].url %>"><%= book.genre[0].name %></a></p>

<hr class="border-light">
<div class="ml-3">
    <h4>Copies</h4>
    <% bookInstances.forEach(el => { %>
        <div class="instance">
            <hr class="border-light">
            <h6 class="<%= el.status === 'Available' ? 'text-success' : el.status === 'Maintenance' ? 'text-danger' : 'text-warning' %>"><%= el.status %></h6>
            <p><span class="font-weight-bold">Imprint: </span><%= el.imprint %></p>
            <p><span class="font-weight-bold">ID: </span><a href="<%= el.url %>"><%= el._id %></a></p>
            <% if (el.status !== 'Available') { %>
             <p><span class="font-weight-bold">Due back: </span><%= el.formattedDate %></p>
            <% } %>
        </div>
    <% }) %>
</div>

<hr class="border-light">
    <p class="btn btn-light "><a class="text-dark" href="<%= book.url + '/delete' %>">Delete Book</a></p>
    <p class="btn btn-light "><a class="text-dark" href="<%= book.url + '/update' %>">Update Book</a></p>
<%- include('./partials/footer.ejs') %>