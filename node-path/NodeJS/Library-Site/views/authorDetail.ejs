<%- include('./partials/header.ejs', {title}) %>
<div class="title mt-5">
    <h2><%= author.name %></h2>
    <p><%= `${author.formattedDob} - ${author.formattedDod}` %></p>
</div>
<hr class="border-light">
<div class="content ml-3">
    <h4>Books</h4>
    <div class="books mt-5">
        <% books.forEach(book => { %>
            <h6><a href="<%= book.url %>"><%= book.title %></a></h6>
            <p><%= book.summary %></p>
        <% }) %>
    </div>
    <% if (books.length === 0) { %>
        <h3 class="text-center mt-5">There are no books</h3>
    <% } %>
    <hr class="border-light">
    <p class="btn btn-light "><a class="text-dark" href="<%= author.url + '/delete' %>">Delete Author</a></p>
    <p class="btn btn-light "><a class="text-dark" href="<%= author.url + '/update' %>">Update Author</a></p>
</div>
<%- include('./partials/footer.ejs') %>