<%- include('./partials/header.ejs') %>
<div class="title mt-5">
    <h2>Delete Genre: <%= genre.name %></h2>
</div>
<div class="mt-5 ml-3">
<% if (booksInGenre.length > 0) { %>
    
    <h4>Delete the following Books before attempting to delete this genre</h4>
    <hr class="border-light">
    <h4>Books</h4>
    <ul>
        <% booksInGenre.forEach(el => { %>
        <li><a href="<%= el.url %>"><%= el.title %></a></li>
        <% }) %>
    </ul>
    
<% }else{ %>
    <h4>Do you really want to delete this genre?</h4>
    <form action="" method="POST">
        <input type="hidden" name="genreId" value="<%= genre._id %>" required>
        <button class="btn btn-primary">Delete</button>
    </form>
<% } %>
</div>

<%- include('./partials/footer.ejs') %>